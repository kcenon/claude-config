{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Local Claude Code settings - NOT committed to git",
  "version": "1.0.0",

  "_comments": {
    "usage": "Copy to settings.local.json and customize",
    "priority": "These settings override project settings.json"
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Add your local pre-tool hooks here'",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Add your local post-tool hooks here'",
            "timeout": 5
          }
        ]
      }
    ]
  },

  "env": {
    "LOCAL_DEV": "true",
    "DEBUG": "false"
  },

  "permissions": {
    "allow": [],
    "deny": []
  }
}
